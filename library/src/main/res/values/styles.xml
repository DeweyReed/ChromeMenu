<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CmOverflowMenuThemeOverlay" parent="Theme.AppCompat.DayNight">
        <item name="android:popupBackground">@null</item>
        <item name="android:listDivider">@null</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:textAppearance">@style/CmTextAppearance.CmBlackTitle1</item>
        <item name="colorControlHighlight">@color/cm_control_highlight_color</item>
    </style>

    <style name="CmOverflowMenuAnim">
        <item name="android:windowEnterAnimation">@anim/cm_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/cm_menu_exit</item>
    </style>

    <style name="CmOverflowMenuAnimBottom">
        <item name="android:windowEnterAnimation">@anim/cm_menu_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/cm_menu_exit_from_bottom</item>
    </style>

    <style name="CmOverflowMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:scaleType">center</item>
        <item name="tint">@color/cm_dark_mode_tint</item>
    </style>

    <style name="CmAppMenuItem">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- Overflow menu -->
    <style name="CmAppMenuItemText">
        <item name="android:textAppearance">@style/CmTextAppearance.TextLarge.Primary</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CmTextAppearance" parent="android:TextAppearance" />

    <style name="CmTextAppearance.CmBlackTitle1">
        <item name="android:textColor">@color/cm_default_text_color_list</item>
        <item name="android:textSize">@dimen/cm_text_size_large</item>
    </style>

    <style name="CmTextAppearance.TextLarge" />

    <style name="CmTextAppearance.TextLarge.Primary">
        <item name="android:textColor">@color/cm_default_text_color_list</item>
    </style>

    <style name="CmAppMenuItemTextViewWithCompoundDrawables" parent="CmAppMenuItemText">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:tintMode">src_in</item>
        <item name="cm_chromeDrawableTint">@color/cm_default_icon_color_secondary_tint_list</item>
        <item name="cm_drawableWidth">24dp</item>
        <item name="cm_drawableHeight">24dp</item>
    </style>
</resources>