<!-- Layout for each item in the menu popup -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CmAppMenuItem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <xyz.aprildown.chromemenu.ChromeImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:tint="@color/cm_default_icon_color_secondary_tint_list" />

    <TextView
        android:id="@+id/menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textAppearance="@style/CmTextAppearance.TextLarge.Primary" />

</LinearLayout>